<%= render 'devise/shared/new_css', cache: true %>
<div class="container">
  <div class="card-wrap">
    <div class="card border-0 shadow card--register" id="register">
      <div class="card-body">
        <h2 class="card-title">会员注册</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" , placeholder: "邮箱" , required: "required" %>
          </div>
          <div class="form-group">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" , placeholder: "密码" , required: "required" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control" ,
              placeholder: "再次输入密码" , required: "required" %>
          </div>
          <p><a href="<%= new_session_path(resource_name) %>">我要登录</a></p>
          <%= f.submit "注册" ,class: "btn btn-lg" %>
        <% end %>
      </div>
	  <a class="btn btn-back" href="/" target="_self">首</a>
    </div>
  </div>
</div>
