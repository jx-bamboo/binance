<title>田边控制台</title>

<link href="/client/css/css2.css" rel="stylesheet">
<link rel="stylesheet" href="/client/css/bootstrap.css">
<link rel="stylesheet" href="/client/css/bold.css">
<link rel="stylesheet" href="/client/css/perfect-scrollbar.css">
<link rel="stylesheet" href="/client/css/bootstrap-icons.css">
<link rel="stylesheet" href="/client/css/app.css">
<link rel="stylesheet" href="/client/css/client.css">

<div id="app">

	<%= render 'side' %>

	<div id="main">
		<header class="mb-3">
			<a href="#" class="burger-btn d-block d-xl-none">
				<i class="bi bi-justify fs-3"></i>
			</a>
		</header>

		<div class="alert alert-success">
			<p id="notice"><%= notice %></p>
		</div>

		<div class="page-heading">
			<h3>两步验证</h3>
		</div>
		<div class="page-content">
			<section class="row">
				<div class="col-12 col-lg-9">

					<%#= render 'main' %>

					<div class="row">

						<%#= render 'global' %>

						<% if current_user.int1.blank? %>
							<div class="col-12 col-xl-6">
								<div class="card">
									<div class="card-header">
										<h4>第一步</h4>使用库链验证器扫描二维码或者输入码
									</div>
									<div class="card-body">
										<div class="table-responsive text-center">
											<%#= image_tag "#{@png.to_data_url}",class:"img-fluid",width: "200px" %>
											<%= image_tag "data:image/jpeg;base64,#{@img}",class:"img-fluid",width: "200px" %>
										</div>
										<div class="table-responsive text-center">
											<p><%= @secret %></p>
										</div>
									</div>
								</div>
							</div>

							<div class="col-12 col-xl-6">
								<div class="card">
									<div class="card-header">
										<h4>第二步</h4>输入库链验证器的验证码验证
									</div>
									<div class="card-body">
										<div class="table-responsive">
											<%= form_with url: deal_two_auth_clients_path do |f| %>
											<%#= f.hidden_field :state, value: Time.now.to_i %>
											<div class="form-group">
												<%= f.text_field :code, autofocus: true, autocomplete: "code" , minlength: 6,maxlength: 6, class: "form-control" , placeholder: "code" ,required: "required" %>
											</div>
											<div class="form-group">
												<%= f.submit "确认" , class: "btn btn-lg btn-light-primary" %>
											</div>
											<% end %>
										</div>
									</div>
								</div>
							</div>
						<% else %>
							<div class="col-12 col-xl-12">
								<div class="card">
									<div class="card-header">
										<h4>已开启两步验证</h4>输入库链验证码可关闭
									</div>
									<div class="card-body">
										<div class="table-responsive">
											<%= form_with url: deal_two_auth_clients_path, method: "get" do |f| %>
											<div class="form-group">
												<%= f.submit "关闭" , class: "btn btn-lg btn-light-primary",data: { confirm: "你确认关闭两步验证吗?" } %>
											</div>
											<% end %>
										</div>
									</div>
								</div>
							</div>
						<% end %>
					</div>
				</div>
				<div class="col-12 col-lg-3">

					<div class="card">
						<div class="card-header">
							<h4>非会员</h4>
						</div>
						<div class="card-content pb-4">

							<div class="recent-message d-flex px-4 py-3">
								<div class="avatar avatar-lg">
									<%= image_tag "client/5.jpg" %>
								</div>
								<div class="name ms-4">
									<h5 class="mb-1"><%= current_user.int1 %></h5>
									<h6 class="text-muted mb-0"><%= current_user.email %></h6>
								</div>
							</div>

							<div class="px-4">
								<%= link_to "新增客户" , new_client_path,class: "btn btn-block btn-xl btn-light-primary font-bold mt-3" %>
							</div>
						</div>
					</div>

				</div>
			</section>
		</div>

		<footer>
			<div class="footer clearfix mb-0 text-muted">
				<div class="float-start">
					<p>2021 © 田边</p>
				</div>
				<div class="float-end">
					<p>Crafted with <span class="text-danger"><i class="bi bi-heart"></i></span> by <a href="">田. 边</a>
					</p>
				</div>
			</div>
		</footer>
	</div>
</div>

