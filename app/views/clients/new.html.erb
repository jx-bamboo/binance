
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<style media="screen">
	.cred{
		border: 1px solid red;
	}
	.main-bg{
		background: #542cb7;
	}
	.client-side-right{
		/* margin:0; */
		background: #ebf3ff;
	}
	.client-index{
		width:100%;
		height: 100%;
		position: absolute;
		left:0px;
		top:0px;
		display: flex;
		flex-direction: row;
	}

  .avatar img{
		width: 32px;
	}

</style>

<div class="client-index">
	<!-- 左边侧边栏 -->
	<%= render 'side' %>
	<!-- 右边内容 -->
  <div class="col-sm-9 col-lg-8 col-xl-10 p-3 client-side-right">

			<div class="row">
				<div class="col-12 col-lg-9">
          <div class="card py-4 px-5">
          <h1 style="color: #007bff">新增一个客户</h1>
          <%= render 'form', client: @client %>
          <%= link_to '返回仪表盘', clients_path, class: "btn btn-light" %>
          </div>
				</div>

				<div class="col-12 col-lg-3">
					<div class="card">
						<div class="card-body py-4 px-5">
							<div class="d-flex align-items-center">
								<div class="avatar avatar-xl">
									<%= image_tag "client/1.jpg" %>
								</div>
								<div class="ms-3 name">
									<h5 class="font-bold">
										<%= @name %>
									</h5>
									<h6 class="text-muted mb-0">binancezh.co</h6>
								</div>
							</div>
							<div class="px-4">
								<%= link_to "新增客户", new_client_path, class: "btn btn-primary mt-3" %>
							</div>
						</div>
					</div>
				</div>
			</div>

		<hr>
		<footer>
			<div class="footer clearfix mb-0 text-muted">
				<div class="float-start">
					<p>2021 © 田边</p>
				</div>
				<div class="float-end">
					<p>Crafted with <span class="text-danger"><i class="bi bi-heart"></i></span> by <a href="">田. 边</a></p>
				</div>
			</div>
		</footer>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
